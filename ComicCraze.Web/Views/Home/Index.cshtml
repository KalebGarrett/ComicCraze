@model IndexViewModel

@{
    ViewData["Title"] = "Comic Craze";
}

<Section class="container text-center mt-5 content-box">
    <div class="row">
        <h1 class="col-12 display-1 text-warning">XKCD Comic</h1>
    </div>
    <div class="row mt-3">
        <h3 class="col-12 display-6 text-white">Comic Title: @Model.Comic.Title</h3>
    </div>
    <div class="row mt-3 border-dark">
        <img class="col-12 mx-auto comic-img bg-secondary p-3" src="@Model.Comic.Img" alt="@Model.Comic.Alt"/>
    </div>
</Section>